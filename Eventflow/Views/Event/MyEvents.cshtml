@model Eventflow.Domain.Models.ViewModels.CalendarPageViewModel

@{
    Layout = "~/Views/Shared/_CalendarLayout.cshtml";
    ViewData["Title"] = "My Events";
}

<div class="w-100" style="max-width: 1100px;">
    <h2 class="text-center mb-4">
        Your Calendar - @(new DateTime(Model.Navigation.CurrentYear, Model.Navigation.CurrentMonth, 1).ToString("MMMM yyyy"))
    </h2>

    @await Html.PartialAsync("Partial/_Calendar", Model.Calendar)

    <div class="d-flex justify-content-between align-items-center mt-4">
        <a href="?month=@Model.Navigation.PrevMonth&year=@Model.Navigation.PrevYear" class="btn btn-outline-secondary">«</a>
        <a href="?month=@Model.Navigation.NextMonth&year=@Model.Navigation.NextYear" class="btn btn-outline-secondary">»</a>
    </div>
</div>

@section Scripts {
    <script src="~/js/calendar.js" asp-append-version="true"></script>
}