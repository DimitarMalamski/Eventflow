@using Eventflow.Domain.Models.ViewModels
@model ReminderPageViewModel

@{
    Layout = "~/Views/Shared/_CalendarLayout.cshtml";
    ViewData["Title"] = "My Reminders";
}

<div class="container">
    <div class="row align-items-center mb-4">
        <div class="col-md-9 d-flex justify-content-center">
            <h4 class="mb-0">My Reminders</h4>
        </div>

        <div class="col-md-3">
            <form method="get" asp-controller="Reminder" asp-action="Index">
                @await Component.InvokeAsync("Dropdown", new DropdownViewModel {
                    Label = "State",
                    Name = "state",
                    Id = "state",
                    DefaultOptionLabel = null,
                    SelectedValue = Model.CurrentStatus.ToString().ToLower(),
                    Options = new List<DropdownOption> {
                        new DropdownOption { Id = "unread", Name = "Unread" },
                        new DropdownOption { Id = "read", Name = "Read" }
                    }
                })
            </form>
        </div>
    </div>

    <div id="reminderListContainer" class="reminder-scrollbox">
        @await Html.PartialAsync("~/Views/Shared/Partials/Reminder/_ReminderListPartial.cshtml"
        , Model.Reminders)
    </div>

    <form id="antiForgeryForm" style="display: none;">
        @Html.AntiForgeryToken()
    </form>
</div>

@section Scripts {
    <script src="~/js/mark_reminder_read.js" asp-append-version="true"></script>
    <script src="~/js/reminder_filter.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/reminder_styles.css" />
    <link rel="stylesheet" href="~/css/reminder_card.css" />
}
