@using Eventflow.Domain.Models.Common
@using Eventflow.ViewModels
@model ReminderPageViewModel

@{
    Layout = "~/Views/Shared/_CalendarLayout.cshtml";
    ViewData["Title"] = "My Reminders";
}

<div class="container">
    <div class="row align-items-center mb-4">
        <div class="col-md-9 d-flex justify-content-center">
            <h4 class="mb-0">My Reminders</h4>
        </div>

        <div class="col-md-3">
            <form method="get" asp-controller="Reminder" asp-action="Index">
                @await Component.InvokeAsync("Dropdown", new DropdownViewModel {
                    Label = "State",
                    Name = "state",
                    Id = "state",
                    DefaultOptionLabel = null,
                    SelectedValue = Model.CurrentStatus.ToString().ToLower(),
                    Options = new List<DropdownOption> {
                        new DropdownOption { Id = "unread", Name = "Unread" },
                        new DropdownOption { Id = "read", Name = "Read" }
                    }
                })
            </form>
        </div>
    </div>

    <div class="row mb-3">
    <div class="col-md-6">
        <input type="text"
               id="searchInput"
               class="form-control"
               placeholder="Search by title, description, or event title"
               value="@Model.SearchTerm" />
    </div>

    <div class="col-md-3">
        <select id="sortDropdown" class="form-select">
            <option value="">Sort By (Default)</option>
            <option value="event" selected="@(Model.SortBy == "event")">Event Title</option>
            <option value="date" selected="@(Model.SortBy == "date")">Reminder Date</option>
            <option value="liked" selected="@(Model.SortBy == "liked")">Liked Reminders</option>
        </select>
    </div>

    <div class="col-md-3">
        <button type="button" id="applyFiltersBtn" class="btn btn-primary w-100">
            Apply Filters
        </button>
    </div>
</div>

    <div id="reminderListContainer" class="reminder-scrollbox">
        @await Html.PartialAsync("~/Views/Shared/Partials/Reminder/_ReminderListPartial.cshtml"
        , Model)
    </div>

    <form id="antiForgeryForm" style="display: none;">
        @Html.AntiForgeryToken()
    </form>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/reminder_styles.css" />
    <link rel="stylesheet" href="~/css/reminder_card.css" />
}
