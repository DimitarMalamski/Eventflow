@using Eventflow.Domain.Enums
@using Eventflow.ViewModels
@using Eventflow.ViewModels.Reminder.Component
@model ReminderBoxViewModel

@if ((int)Model.Status == (int)ReminderStatus.Unread)
{
    <button type="button"
            class="btn btn-outline-primary btn-sm mark-as-read-btn"
            data-id="@Model.Id">
        Mark as Read    
    </button>
}
else
{
    <span class="badge bg-secondary">Read</span>
}
