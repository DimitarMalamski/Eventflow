@using Eventflow.ViewModels;
@using Eventflow.ViewModels.Reminder.Page
@using Eventflow.ViewModels.Shared
@model ReminderPageViewModel

@if (Model.Reminders?.Any() == true)
{
    foreach (var reminder in Model.Reminders)
    {
        if (reminder != null)
        {
            @await Html.PartialAsync("~/Views/Shared/Partials/Reminder/_ReminderCardPartial.cshtml", reminder)
        }
    }

    @await Html.PartialAsync("~/Views/Shared/Partials/Reminder/_PaginationPartial.cshtml", new PaginationViewModel
    {
        CurrentPage = Model.CurrentPage,
        TotalPages = Model.TotalPages,
        SearchTerm = Model.SearchTerm,
        SortBy = Model.SortBy,
        State = "Reminder" ?? null
    })
}
else
{
    @await Html.PartialAsync("~/Views/Shared/Partials/Reminder/_ReminderEmptyStatePartial.cshtml")
}
