@using Eventflow.ViewModels;
@using Eventflow.ViewModels.Calendar
@model CalendarNavigationViewModel

<input type="hidden" id="currentMonth" value="@Model.CurrentMonth" />
<input type="hidden" id="currentYear" value="@Model.CurrentYear" />

<div class="d-flex justify-content-between align-items-center mt-4">
    <a href="#" class="btn btn-outline-secondary calendar-nav" data-month="@Model.PrevMonth" data-year="@Model.PrevYear">«</a>
    <a href="#" class="btn btn-outline-secondary calendar-nav" data-month="@Model.NextMonth" data-year="@Model.NextYear">»</a>
</div>
