<div class="modal fade" id="eventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered mx-auto" style="max-width: 900px; width: 40%;">
        <div class="modal-content custom-modal-content mx-auto">
            <div class="modal-header custom-modal-header">
                <h5 class="modal-title" id="eventModalLabel">
                      Event Details – <small><span id="modal-event-creator" class="text-muted"></span></small>
                </h5>

                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex justify-content-between flex-wrap">
                <div class="left-section w-50">
                    <p><strong>Title:</strong> <span id="modal-event-title"></span></p>
                    <p><strong>Description:</strong> <span id="modal-event-description"></span></p>
                    <p><strong>Date:</strong> <span id="modal-event-date"></span></p>

                    <div id="modal-event-category-wrapper">
                        <p><strong>Category:</strong> <span id="modal-event-category"></span></p> 
                    </div>                          
                </div>

                <div id="modal-event-participants-wrapper" class="right-section ms-auto d-flex flex-column" style="min-width: 220px">
                    <p class="mb-2 fw-bold">Participants:</p>
                    <div style="max-height: 7.5em; overflow-y: auto; border: 1px solid #ddd; border-radius: 5px; padding: 0.5rem; background: #f9f9f9;"> 
                        <ul id="modal-event-participants" class="list-unstyled mb-0 ps-2 small"></ul>
                    </div>
                </div>

                <span id="modal-event-id" style="display: none;"></span>
            </div>         

            <div class="modal-footer custom-modal-footer">
                <button id="edit-button" class="btn btn-outline-primary">
                    <i class="bi bi-pencil-square me-1"></i> Edit Event
                </button>

                <button id="reminder-button" class="btn btn-outline-warning">
                    <i class="bi bi-alarm me-1"></i> Set Reminder
                </button>

                <button id="invite-button" class="btn btn-outline-success">
                    <i class="bi bi-person-plus me-1"></i> Invite People
                </button>

                <button id="leave-button" class="btn btn-danger">
                    <i class="bi bi-box-arrow-right me-1"></i> Leave Event
                </button>
            </div>
        </div>
    </div>
</div>

<form method="post" action="/Invite/LeaveEvent" id="leave-event-form" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="eventId" id="leave-event-id" />
    <button type="submit" id="leave-form-submit"></button>
</form>