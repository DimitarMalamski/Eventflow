@using Eventflow.ViewModels
@model LoginViewModel

<form asp-action="Login" method="post" class="text-start">
    @Html.AntiForgeryToken()

    @await Component.InvokeAsync("FormInput", new FormInputModel
    {
        Label = "Username/Email",
        Name = nameof(Model.LoginInput),
        Type = "text",
        Placeholder = "Enter your username or email"
    })

    @await Component.InvokeAsync("FormInput", new FormInputModel
    {
        Label = "Password",
        Name = nameof(Model.Password),
        Type = "password",
        Placeholder = "Enter your password"
    })

    <div class="d-flex w-100 gap-2 justify-content-center mb-3">
        <button type="submit" class="btn btn-primary w-50 text-center py-2">Login</button>
        <a class="btn btn-secondary w-50 text-center py-2"
           asp-action="GuestLogin" asp-controller="Account">Continue as Guest</a>
    </div>
</form>

<p class="mt-3 text-center">
    Don't have an account?
    <a asp-action="Register" asp-controller="Account">Register here</a>
</p>
