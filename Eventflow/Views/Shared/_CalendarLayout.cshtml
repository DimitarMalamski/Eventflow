@using Eventflow.Application.Services.Interfaces
@using Eventflow.Domain.Models.ViewModels
@using Eventflow.Domain.Models.Models
@using static Eventflow.Utilities.SidebarHelper;

@{
    Layout = null;

    var sidebarState = "expanded";

    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";

    var sidebarContext = GetSidebarContext(currentController, currentAction);
    var needsVerticalCentering = NeedsVerticalCentering(currentController);

    var pageModel = Model as CalendarPageViewModel;
    var continents = pageModel?.Continents ?? new List<Continent>();

    ViewData["Title"] ??= "Eventflow";
}

<!DOCTYPE html>
<html lang="en" class="js-sidebar-loading">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@((ViewData["Title"] ?? "Eventflow"))</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/event_toggle.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/event_modal.css" />
    <link rel="stylesheet" href="~/css/reminder_invite_modal.css" />
    <link rel="stylesheet" href="~/css/sidebar_toggle.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @Html.Raw("<script src='https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js'></script>")
    <script src="~/js/sidebar_toggle.js"></script>
    <script src="~/js/calendar_init.js"></script>
    <script src="~/js/calendar_navigation.js"></script>
    <script type="module" src="~/js/site.js"></script>
</head>
<body class="bg-light">
    <div class="d-flex min-vh-100">
        <div id="sidebarWrapper" class="bg-white shadow-sm position-relative sidebar-@sidebarState">
            <button id="sidebarToggle" class="sidebar-toggle-btn">
                <i id="toggleIcon" class="bi bi-chevron-left"></i>
            </button>
            @await Component.InvokeAsync("Sidebar", new
                {
                    context = sidebarContext,
                    continents = continents,
                    selectedCountryId = Model.SelectedCountryId
                })
        </div>

        <div id="mainContent" class="flex-grow-1 p-4 @(needsVerticalCentering ? "d-flex justify-content-center align-items-center" : "")">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
    @RenderSection("Styles", required: false)
</body>
</html>
