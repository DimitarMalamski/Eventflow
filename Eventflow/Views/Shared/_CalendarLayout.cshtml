@using Eventflow.Domain.Models.ViewModels
@{
    Layout = null;
    var continents = ((CalendarPageViewModel)Model).Continents;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] ?? "Eventflow" - Calendar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container-fluid">
        <div class="row min-vh-100">
            <div class="col-md-3 bg-white shadow-sm p-4 d-flex flex-column justify-content-between">
                @await Html.PartialAsync("Partial/_Sidebar", continents);
            </div>

            <div class="col-md-9 p-4 d-flex justify-content-center align-items-center min-vh-100">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
