@using Eventflow.Domain.Models.ViewModels
@model InvitePageViewModel

@{
    Layout = "~/Views/Shared/_CalendarLayout.cshtml";
    ViewData["Title"] = "My Invites";
}

<div class="container">
    <div class="row align-items-center mb-4">
    <div class="col-md-9 d-flex justify-content-center">
        <h4 class="mb-0">My Invites</h4>
    </div>

    <div class="col-md-3">
        <form method="get" asp-controller="Invite" asp-action="Index">
            <select class="form-select" name="statusId" onchange="this.form.submit()">
                <option value="1" selected="@(Model.CurrentStatusId == 1)">Pending</option>
                <option value="2" selected="@(Model.CurrentStatusId == 2)">Accepted</option>
                <option value="3" selected="@(Model.CurrentStatusId == 3)">Declined</option>
            </select>
        </form>
    </div>
</div>

    @if (!Model.Invites.Any())
    {
            <p class="text-muted">No invites found.</p>
    }
    else
    {
        foreach (var invite in Model.Invites)
        {
                    <div class="card mb-4 shadow-sm border">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div class="me-4">
                    <h5 class="card-title">
                            @invite.EventTitle 
                            <small class="text-muted fw-normal ms-2">– @invite.CreatedAt.ToString("MMMM dd, yyyy")</small>
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">Invited by: <strong>@invite.InvitedByUsername</strong></h6>
                    <p class="card-text mb-1">@invite.EventDescription</p>
                    <p class="text-secondary mb-2">
                        <i class="bi bi-calendar-event"></i> @invite.EventDate.ToString("MMMM dd, yyyy")
                    </p>
                </div>

                    @if (invite.StatusId == 1)
                    {
                        <div class="ms-auto d-flex gap-3 align-items-center">
                            <form method="post" asp-controller="Invite" asp-action="Respond" class="d-flex gap-3">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="inviteId" value="@invite.InviteId" />
                                <button type="submit" name="statusId" value="2" class="btn btn-success px-4 py-2 fs-6">Accept</button>
                                <button type="submit" name="statusId" value="3" class="btn btn-danger px-4 py-2 fs-6">Decline</button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="ms-4">
                            <span class="badge bg-secondary">
                                @(invite.StatusId == 2 ? "Accepted" : "Declined")
                            </span>
                        </div>
                    }
            </div>
        </div>
        }
    }
</div>