@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div class="form-group">
        <label>Username/Email</label>
        <input type="text" name="loginInput" placeholder="Username or Email" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>

    <p>
        <a class="btn btn-secondary" href="@Url.Action("GuestLogin", "Account")">Continue as Guest</a>
    </p>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-danger">@Html.ValidationSummary()</div>
    }
</form>

<p>Don't have an account? <a href="@Url.Action("Register", "Account")">Register here</a></p>
